@model EmployeeViewModel

<h2>Employee Details</h2>

@if (Model != null)
{
    <dl>
        <dt>Name:</dt>
        <dd>@Model.Name</dd>

        <dt>Salary:</dt>
        <dd>@Model.Salary</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Age:</dt>
        <dd>@Model.Age</dd>
    </dl>
}
else
{
    <p>Employee not found.</p>
}
