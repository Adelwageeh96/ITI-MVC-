@model IEnumerable<EmployeeViewModel>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Salary</th>
            <th>Email</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Salary</td>
                <td>@employee.Email</td>
                <td>@employee.Age</td>
            </tr>
        }
    </tbody>
</table>
